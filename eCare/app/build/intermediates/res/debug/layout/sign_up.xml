<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:transitionGroup="false"
    android:background="#3b5998"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/signup"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:typeface="sans"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:singleLine="true"
        android:hint="@string/name" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:singleLine="true"
        android:hint="@string/email" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pas"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:hint="@string/pasw"/>


    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pas"
        android:textSize="20dp"
        android:singleLine="true"
        android:hint="@string/age"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_below="@+id/editText3"
        android:hint="@string/phone"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:typeface="monospace"
        android:background="@drawable/camera"
        android:layout_marginRight="1dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/switch1"
        android:onClick="camera" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:layout_toRightOf="@+id/button3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:cropToPadding="true"
        android:src="@drawable/index"
        android:layout_below="@+id/switch1" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/button4"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:paddingBottom="15dp"
        android:textSize="20dp"
        android:typeface="serif"
        android:textStyle="italic" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:id="@+id/switch1"
        android:layout_below="@+id/editText4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:checked="false"
        android:textSize="20dp"
        android:textOff="Male"
        android:textOn="Female"
        android:hint="@string/gender" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/textView"
        android:layout_below="@+id/editText4"
        android:layout_toRightOf="@+id/switch1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="#ffffff" />

</RelativeLayout><!-- From: file:/C:/Users/TALHA/Desktop/eCare/app/src/main/res/layout/sign_up.xml -->